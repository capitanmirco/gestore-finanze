{
  "name": "finanze-personali",
  "version": "1.0.0",
  "description": "Gestore delle finanze personali, un'app per tenere traccia delle tue entrate e uscite.",
  "main": "main.js",
  "author": "Mirco Mennonna",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "electron-forge start",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:finanze-personali": "node dist/finanze-personali/server/server.mjs",
    "electron": "ng build --output-path=dist/finanze-personali --base-href ./ && electron .",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "dev:angular": "ng serve",
    "dev:electron": "wait-on http://localhost:4200 && electron .",
    "dev": "concurrently \"npm run dev:angular\" \"npm run dev:electron\"",
    "start:electron": "concurrently \"npm run dev:angular\" \"npm run dev:electron\""
  },
  "build": {
    "appId": "com.finanze.personali",
    "productName": "Finanze Personali",
    "files": [
      "dist/**/*",
      "main.js"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^19.2.7",
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/material": "^19.2.7",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/platform-server": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@angular/ssr": "^19.2.5",
    "@electron/remote": "^2.1.2",
    "bootstrap": "^5.3.3",
    "chart.js": "^4.4.8",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^4.18.2",
    "ngx-chartjs": "^0.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.5",
    "@angular/cli": "^19.2.5",
    "@angular/compiler-cli": "^19.2.0",
    "@electron-forge/cli": "^7.8.0",
    "@electron-forge/maker-deb": "^7.8.0",
    "@electron-forge/maker-rpm": "^7.8.0",
    "@electron-forge/maker-squirrel": "^7.8.0",
    "@electron-forge/maker-zip": "^7.8.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.0",
    "@electron-forge/plugin-fuses": "^7.8.0",
    "@electron/fuses": "^1.8.0",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "cli-progress": "^3.12.0",
    "concurrently": "^9.1.2",
    "electron": "^35.1.2",
    "electron-reload": "^2.0.0-alpha.1",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.7.2",
    "wait-on": "^8.0.3"
  }
}
